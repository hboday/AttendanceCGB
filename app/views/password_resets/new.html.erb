<div class="container">
  <div class="row justify-content-center" style="margin-top: 25vh;">
    <div class="col-md-6">
      <div class="my-5">
        <h1>Forgot your password?</h1>
        <%= form_with(url: password_resets_path, local: true) do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
          <%= f.submit "Send password reset email", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
