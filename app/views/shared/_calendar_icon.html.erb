<div class="card shadow-lg <%= "" + (date < Date.today ? 'calendar-icon-muted' : '') + (note.present? ? '' : ' calendar-icon-faded') %>" data-date="<%= date.to_s %>">
  <div class="card-header bg-primary text-white text-center py-3">
    <%= date.strftime("%B") %>
  </div>
  <div class="card-body">
    <h1 class="card-title display-1 text-center custom-card-title">
      <%= date.strftime("%-d") %>
    </h1>
    <div class="d-flex justify-content-center mb-4">
      <div class="badge bg-secondary px-4 py-2">
        <%= date.strftime("%A") %>
      </div>
    </div>
    <div class="d-flex justify-content-center" style="height: 50px;">
      <div class="card-text text-center custom-note" style="width: 100%;">
        <div class="fw-bold">
          <%= note.present? ? note : 'No shift' %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .custom-card-title {
    font-size: 2rem;
  }

  .custom-note {
    font-size: 1.2rem;
    color: #999;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .custom-note .fw-bold {
    font-weight: bold;
  }

  .calendar-icon-faded {
    opacity: 0.5;
  }

  .calendar-icon-muted {
    background-color: #f2f2f2 !important;
    color: #999;
  }
</style>
